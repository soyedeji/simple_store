<h1>All Products</h1>

<% if @products.any? %>
  <ul>
    <% @products.each do |product| %>
      <li>
        <%= link_to product.title, product_path(product) %> -
        $<%= product.price %> (Category: <%= product.category.name %>)
      </li>
    <% end %>
  </ul>
<% else %>
  <p>No products available</p>
<% end %>
